# Environment variables for MedAdhere
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=sqlite:///./medadhere.db

# Security
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Twilio (for SMS alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email (for email alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/medadhere.log

# ML Models
PILL_MODEL_PATH=data/models/pill_identifier.h5
INGESTION_MODEL_PATH=data/models/ingestion_detector.h5

# Image Processing
MAX_IMAGE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg

# Adherence Settings
ADHERENCE_WARNING_THRESHOLD=0.8
ADHERENCE_CRITICAL_THRESHOLD=0.6
MISSED_DOSE_ALERT_DELAY_MINUTES=30